# RipForge Configuration Example
# Copy this to config.yaml and fill in your values
# Only include settings you want to override from default.yaml

notifications:
  email:
    provider: sendgrid           # Options: msmtp, sendgrid
    sendgrid_api_key: ""         # Get free key at sendgrid.com (starts with SG.)
    from_address: "you@example.com"
    recipients:
      - "you@example.com"
    on_complete: true
    on_error: true
    weekly_recap: true

integrations:
  radarr:
    api_key: "your-radarr-api-key"
  sonarr:
    api_key: "your-sonarr-api-key"
  plex:
    token: "your-plex-token"
